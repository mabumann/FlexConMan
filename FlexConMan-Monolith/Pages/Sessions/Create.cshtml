@model FlexConMan_Monolith.Pages.Sessions.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Session</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Session.SessionId" class="control-label"></label>
                <input asp-for="Session.SessionId" class="form-control" />
                <span asp-validation-for="Session.SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Session.Datetime" class="control-label"></label>
                <input asp-for="Session.Datetime" class="form-control" />
                <span asp-validation-for="Session.Datetime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Session.Room.Name" class="control-label"></label>
                <select asp-for="Session.RoomId" class ="form-control" asp-items="ViewBag.RoomId"></select>
                <a asp-page="/Rooms/Create" target="_blank" class="btn btn-link, btn-sm">Create new Room</a>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Session.ConferenceId" class="control-label"></label>
                <select asp-for="Session.ConferenceId" class ="form-control" asp-items="ViewBag.ConferenceId"></select>
                <a asp-page="/Conferences/Create" target="_blank" class="btn btn-link, btn-sm">Create new Conference</a>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Session.PreId" class="control-label"></label>
                <select asp-for="Session.PreId" class ="form-control" asp-items="ViewBag.PreId"></select>
                <a asp-page="/Presentations/Create" target="_blank" class="btn btn-link, btn-sm">Create new Presentation</a>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

