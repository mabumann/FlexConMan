@page
@model FlexConMan_Monolith.Pages.Sessions.DetailsModel

@{
    ViewData["Title"] = "Session Details";
    var isUser = User.IsInRole("USER");
}

<h1>Details</h1>

<div>
    <h4>Session</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Datetime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Datetime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Room)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Conference)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Conference.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Presentation)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Presentation.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Session.Presentation.Speaker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Session.Presentation.Speaker)
        </dd>
    </dl>
</div>
<div>
    @if (!isUser)
    {
        @if (Model.Session != null)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Session.SessionId">Edit</a> @:|
        }
        else
        {
            <span>No conference details available.</span> @:|
        }
    }
    <a asp-page="./Index">Back to List</a>
</div>
