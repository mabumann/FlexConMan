@model FlexConMan_Monolith.Pages.Tickets.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.OrderId" />
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ticket.CustomerId" class="control-label"></label>
                <select asp-for="Ticket.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="Ticket.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="Ticket.SessionId" class="control-label"></label>
                <select asp-for="Ticket.SessionId" class="form-control" asp-items="ViewBag.SessionId"></select>
                <span asp-validation-for="Ticket.SessionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

