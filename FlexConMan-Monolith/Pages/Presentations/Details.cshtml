@page
@model FlexConMan_Monolith.Pages.Presentations.DetailsModel

@{
    ViewData["Title"] = "Details";
    var isUser = User.IsInRole("USER");
}

<h1>Details</h1>

<div>
    <h4>Presentation</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Presentation.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Presentation.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Presentation.Speaker)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Presentation.Speaker)
        </dd>
    </dl>
</div>
<div>
    @if (!isUser)
    {
        @if (Model.Presentation != null)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Presentation.PreId">Edit</a> @:|
        }
        else
        {
            <span>No presentation details available.</span> @:|
        }
    }
    <a asp-page="./Index">Back to List</a>
</div>
