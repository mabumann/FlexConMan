@page
@model FlexConMan_Monolith.Pages.Rooms.DetailsModel

@{
    ViewData["Title"] = "Details";
    var isUser = User.IsInRole("USER");
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.NumberOfSeats)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.NumberOfSeats)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Room.ConferenceCenter)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Room.ConferenceCenter.City)
        </dd>
    </dl>
</div>
<div>
    @if (!isUser)
    {
        @if (Model.Room != null)
        {
            <a asp-page="./Edit" asp-route-id="@Model.Room.RoomId">Edit</a> @:|
        }
        else
        {
            <span>No conference center details available.</span> @:|
        }
    }
    <a asp-page="./Index">Back to List</a>
</div>
